<header class="main-header">
    <!-- Logo -->
    <%= link_to root_url, class: "logo" do %>
      <!-- mini logo for sidebar mini 50x50 pixels -->
      <span class="logo-mini"><i class="fa fa-file-text-o"></i></span>
      <!-- logo for regular state and mobile devices -->
      <span class="logo-lg"><i class="fa fa-file-text-o"></i> <b>Event Manager</b></span>
    <% end %>
    <!-- Header Navbar: style can be found in header.less -->
    <nav class="navbar navbar-static-top">
      <!-- Sidebar toggle button-->
      <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
        <span class="sr-only">Toggle navigation</span>
      </a>

      <div class="navbar-custom-menu">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="dropdown user user-menu">
              <%= link_to "#", class: "dropdown-toggle", data: { toggle: 'dropdown'}, 'aria-expanded': 'true' do %>
                <i class="fa fa-user"></i>
              <% end %>
              <ul class="dropdown-menu">
                <!-- User image -->
                <li class="user-header">
                  <%= image_tag "logo.png", class: "img-square mini-logo-top" %>
                  <p>
                    <%= current_user.email %>
                    <small>Membro desde <%=l(current_user.created_at) %></small>
                  </p>
                </li>
                <!-- Menu Footer-->
                <li class="user-footer">
                  <div class="pull-left">
                    <%= link_to '#', class: 'btn btn-default btn-flat' do %>
                      <i class="fa fa-ticket"></i> Meu perfil
                    <% end %>
                  </div>
                  <div class="pull-right">
                    <%= link_to destroy_user_session_path, class: 'btn btn-default btn-flat', method: "delete" do %>
                      <i class="fa fa-sign-out"></i> Sair
                    <% end %>
                  </div>
                </li>
              </ul>
            </li>
          <% end %>
          <li>
            <%= link_to "https://github.com/felipesousafs/projetoEventos", target: "_blank", class: "toplink" do %>
            <%= image_tag "logo.png", class: "pull-right mini-logo-top" %>
              Github
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
  </header>
