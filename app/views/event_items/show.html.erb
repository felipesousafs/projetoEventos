<%= content_for :full_box do %>opa
<% end %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h2 class="box-title">
      <i class="fa fa-fw fa-list"></i>
      <strong><%= @event_item.name %></strong>
       pertence a
      <%= link_to @event_item.event.name, @event_item.event, class: 'label label-default flat ' %>
    </h2>
  </div>
  <div class="box-body no-padding">

    <table class="table table-striped table-bordered">
      <tr>
        <td width="20%"><strong><%= EventItem.human_attribute_name(:name) %>:</strong></td>
        <td width="30%"><%= @event_item.name %></td>
        <td width="20%"><strong><%= EventItem.human_attribute_name(:value) %>:</strong></td>
        <td width="30%"><%= @event_item.value %></td>
      </tr>
      <tr>
        <td width="20%"><strong><%= Responsible.human_attribute_name(:location) %>:</strong></td>
        <td width="30%"><%= @event_item.location.complete_location %></td>
        <td width="20%"><strong><%= EventItem.human_attribute_name(:event_item_type) %>:</strong></td>
        <td width="30%"><%= @event_item.event_item_type.name %></td>
      </tr>
      <tr>
        <td width="20%"><strong><%= EventItem.human_attribute_name(:description) %>:</strong></td>
        <td width="80%" colspan="3"> <pre><%= @event_item.description %></pre></td>
      </tr>
    </table>
  </div>
</div>
<div class="box box-primary">
  <div class="box-header with-border">
    <h2 class="box-title">
      <i class="fa fa-fw fa-list"></i> Responsáveis
    </h2>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
      <td>
        <th>
          Nome
        </th>
        <th>
          Função
        </th>
      </td>
      </thead>
      <% @event_item.responsibles.each do |responsible| %>
        <tbody>
        <td>
          <tr>
            <%= responsible.name %>
          </tr>
          <tr>
            <%= responsible.responsibility_type.name %>
          </tr>
        </td>
        </tbody>
      <% end %>
    </table>
  </div>

  <div class="box box-primary">
  <div class="box-header with-border">
    <h2 class="box-title">
      <i class="fa fa-fw fa-list"></i> Inscritos
    </h2>
  </div>
  <div class="box-body">
    <table class="table table-striped">
      <thead>
      <td>
        <th>
          Nome
        </th>
        <th>
          Email
        </th>
      </td>
      </thead>
      <% @event_item.inscription_items.each do |inscription_activity| %>
        <tbody>
        <td>
          <tr>
            <%= inscription_activity.inscription.user.name %>
          </tr>
          <tr>
            <%= inscription_activity.inscription.user.email %>
          </tr>
        </td>
        </tbody>
      <% end %>
    </table>
  </div>

</div>