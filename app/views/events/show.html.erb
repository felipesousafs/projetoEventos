<%= content_for :full_box do %>opa
<% end %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h2 class="box-title"><i class="fa fa-fw fa-edit"></i>Dados do Evento</h2>
  </div>
  <div class="box-body no-padding">
    <table class="table table-striped table-bordered">
      <tr>
        <td width="20%"><strong><%= Event.human_attribute_name(:name) %>:</strong></td>
        <td width="30%"><%= @event.name %></td>
        <td width="20%"><strong><%= Event.human_attribute_name(:description) %>:</strong></td>
        <td width="30%"><%= @event.description %></td>
      </tr>
      <tr>
        <td><strong><%= Event.human_attribute_name(:event_type) %>:</strong></td>
        <td><%= @event.event_type.name %></td>
        <td><strong><%= Event.human_attribute_name(:user) %>:</strong></td>
        <td><%= @event.user.name %></td>
      </tr>
      <tr>
        <td><strong><%= Event.human_attribute_name(:tags) %>:</strong></td>
        <td colspan="3"><%= @event.tags %></td>
      </tr>
    </table>
  </div>
</div>
<div class="box box-primary">
  <div class="box-header with-border inside">
    <h3 class="box-title">
      Etapas
    </h3>
  </div>
  <div class="box-body no-padding">
    <table class="table table-striped table-bordered" id="ic">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Início</th>
        <th>Término</th>
        <th>Descrição</th>
      </tr>
      </thead>
      <tbody>
      <% @event.stages.each do |stage| %>
        <tr class="text-vertical ">
          <td><%= stage.name %></td>
          <td><%= stage.date_start %></td>
          <td><%= stage.date_end %></td>
          <td><p><%= stage.description %></p></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="box box-primary">
  <div class="box-header with-border inside">
    <h3 class="box-title">
      Atividades
    </h3>
  </div>
  <div class="box-body no-padding">
    <table class="table table-striped table-bordered" id="ic">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Valor</th>
        <th>Tipo de atividade</th>
        <th>Descrição</th>
      </tr>
      </thead>
      <tbody>
      <% @event.event_items.each do |item| %>
        <tr class="text-vertical ">
          <td><%= item.name %></td>
          <td><%= item.value %></td>
          <td><%= item.event_item_type.name %></td>
          <td><p><%= item.description %></p></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class='box box-info'>
  <div class="box-footer">
    <%= link_to t('.back', :default => t("helpers.links.back")), events_path, :class => 'btn btn-default' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_event_path(@event), :class => 'btn btn-default' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")), event_path(@event), :method => 'delete', :data => {:confirm => 'Tem certeza?'}, :class => 'btn btn-danger' %>
  </div>
</div>