<li class="nested-fields event_item accordion" id="event_item">
  <div class="tools">
    <i class='fa fa-minus display_fields'></i>
    <%= link_to_remove_association f do %>
      <i class='fa fa-trash-o red'> Remover</i>
    <% end %>
  </div>
  <div class='fundo-branco'>
    <div class="row">
      <div class="col-md-5">
        <%= f.input :name %>
      </div>
      <div class="col-md-5">
        <%= f.input :value %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-5">
        <%= f.input :event_item_type %>
      </div>
      <div class="col-md-5">
        <%= f.input :description %>
      </div>
    </div>
  </div>
</li>