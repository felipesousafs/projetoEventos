<%= content_for :full_box do %>opa
<% end %>
<% if @events.size == 0 %>
  <div class="alert alert-danger text-center" style="padding: 12px 10px 5px;">
    <h4><i class="fa fa-fw fa-exclamation-triangle"></i> Sem <%= Event.model_name.human.pluralize %> cadastradas</h4>
  </div>
<% else %>
  <div class="box box-primary">
    <div class="box-body">
      <table class="table table-striped">
        <thead>
        <tr>
          <th><%= Event.human_attribute_name(:name) %></th>
          <th><%= Event.human_attribute_name(:description) %></th>
          <th><%= Event.human_attribute_name(:event_type) %></th>
          <th><%= Event.human_attribute_name(:user) %></th>
          <th>Tags</th>
          <th colspan="3">Ações</th>
        </tr>
        </thead>
        <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.name %></td>
            <td><%= event.description %></td>
            <td><%= event.event_type.name %></td>
            <td><%= event.user.name %></td>
            <td><%= event.tags_list %></td>
            <td><%= link_to 'Show', event %></td>
            <td><%= link_to 'Edit', edit_event_path(event) %></td>
            <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>

<% end %>