<%= content_for :full_box do %>opa
<% end %>

<div class="box box-primary">
  <div class="box-header with-border">
    <h3 class="box-title"><i class="fa fa-fw fa-list"></i> <%= @inscription.event.name %></h3>
  </div>
  <div class="box-body no-padding">
    <table class="table table-striped table-bordered">
      <tr>
        <td width="20%"><strong>Status do pagamento:</strong></td>
        <td width="30%"><span class="label <%= @inscription.paid ? 'label-success' : 'label-warning' %>"><%= @inscription.status_do_pagamento %></span></td>
        <td width="20%"><strong>Cupom utilizado:</strong></td>
        <td width="30%"><span><%= @inscription.cumpom_utilizado %></span></td>
      </tr>
    </table>
  </div>
</div>
<div class="box box-primary">
  <div class="box-header with-border inside">
    <h3 class="box-title">
      Atividades
    </h3>
  </div>
  <div class="box-body no-padding">
    <table class="table table-striped table-bordered" id="ic">
      <thead>
      <tr>
        <th>Nome</th>
        <th>Valor unitário</th>
        <th>Tipo de atividade</th>
        <th>Descrição</th>
      </tr>
      </thead>
      <tbody>
      <% @inscription.inscription_items.each do |item| %>
        <tr class="text-vertical ">
          <td><%= item.event_item.name %></td>
          <td><%= item.event_item.value %></td>
          <td><%= item.event_item.event_item_type.name %></td>
          <td><p><%= item.event_item.description %></p></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class='box box-info'>
  <div class="box-footer">
    <%= link_to t('.back', :default => t("helpers.links.back")), inscriptions_path, :class => 'btn btn-default' %>
    <%= link_to 'Cancelar inscrição', inscription_path(@inscription), :method => 'delete', :data => {:confirm => 'Tem certeza?'}, :class => 'btn btn-danger' %>
  </div>
</div>